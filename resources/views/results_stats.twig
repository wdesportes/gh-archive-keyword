<div class="row">

	<!-- Area Chart -->
	<div class="col-lg-6">
		<div
			class="card shadow mb-4">
			<!-- Card Header - Dropdown -->
			<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
				<h6 class="m-0 font-weight-bold text-primary">Répartition horaire</h6>
			</div>
			<!-- Card Body -->
			<div class="card-body">
				<div class="chart-area">
					<canvas id="myAreaChart"></canvas>
				</div>
			</div>
		</div>
	</div>

	<!-- Table -->
	<div class="col-lg-6">
		<div
			class="card shadow mb-4">
			<!-- Card Header - Dropdown -->
			<div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
				<h6 class="m-0 font-weight-bold text-primary">Sélection d'évènements</h6>
			</div>
			<!-- Card Body -->
			<div class="card-body">
				<table class="table">
					<tbody>
                        {% for commit in commits %}
                            <tr>
                                <th class="border-top-0">Commit
                                    <a href="https://github.com/{{ commit.repository.slug }}/commit/{{ commit.sha }}" target="_blank">{{ commit.sha }}</a>
                                    sur
                                    <a href="https://github.com/{{ commit.repository.slug }}/" target="_blank">{{ commit.repository.slug }}</a>
                                </th>
                                <td class="border-top-0">{{ commit.message|replace({('' ~searchTerm ~ ''): '<strong>' ~ searchTerm ~ '</strong>'})|raw }}</td>
                            </tr>
                        {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
